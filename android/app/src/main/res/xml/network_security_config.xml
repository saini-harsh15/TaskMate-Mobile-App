<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext during development. Narrow this down for production. -->
    <base-config cleartextTrafficPermitted="true" />
    <domain-config cleartextTrafficPermitted="true">
        <!-- Must match ApiService.baseIp (without port) -->
        <domain includeSubdomains="true">10.180.20.48</domain>
        <!-- Common host aliases for emulator/desktop debugging -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
